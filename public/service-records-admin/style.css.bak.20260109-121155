/* ★ 6列グリッド（見本帳票と同じ構造） */
.paper-grid{
  display:grid;
  grid-template-columns: 160px 1fr 160px 1fr 160px 1fr;
  border:2px solid var(--paper-border);
  border-radius:14px;
  overflow:hidden;
}
.paper-grid .cell{
  border-right:2px solid var(--paper-border);
  border-bottom:2px solid var(--paper-border);
  padding:12px 12px;
  font-size:18px;
  line-height:1.4;
}
.paper-grid .cell:nth-child(6n){
  border-right:none;
}
.paper-grid .cell.label{
  background:var(--paper-label);
  font-weight:800;
  text-align:center;
  display:flex;
  align-items:center;
  justify-content:center;
}
.paper-grid .cell.value{
  background:#fff;
  font-weight:700;
}

/* ===== paper grid column tuning =====
   6列構成: [label][value][label][value][label][value]
   赤枠(=label)を狭く、白枠(=value)を広くする
*/
:root{
  --paper-label-w: 64px;   /* ←赤枠をもっと狭くしたいなら 56px/48px */
  --paper-value-w: 1fr;    /* ←白枠は伸びる */
}

.paper-grid{
  /* label/value のペア×3 */
  grid-template-columns:
    var(--paper-label-w) var(--paper-value-w)
    var(--paper-label-w) var(--paper-value-w)
    var(--paper-label-w) var(--paper-value-w) !important;
}

/* label は折り返さず、詰める */
.paper-grid .cell.label{
  white-space: nowrap;
  word-break: keep-all;
}

/* value は折り返しOK（内容に応じて広がる） */
.paper-grid .cell.value{
  min-width: 0; /* grid内のはみ出し抑制 */
}

/* ===== paper typography fit (prevent overflow) ===== */
.paper{
  /* まず全体を少し小さく */
  font-size: 12px;
  line-height: 1.25;
}

/* grid内の文字は折り返しを許可 */
.paper-grid .cell{
  min-width: 0; /* grid内で潰せるように */
  overflow-wrap: anywhere;
  word-break: break-word;
  hyphens: auto;
}

/* 見出し(label)は「2行まで」許可して、はみ出し防止 */
.paper-grid .cell.label{
  white-space: normal;
  line-height: 1.15;
  font-size: 11px;              /* 見出しだけ少し小さく */
  display: -webkit-box;
  -webkit-line-clamp: 2;        /* 2行まで */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 値(value)側は小さめ + 行間を詰める */
.paper-grid .cell.value{
  font-size: 12px;
  line-height: 1.25;
}

/* 大きい本文セルはさらに小さくして収める（主な援助内容など） */
.paper-grid .cell.value.big{
  font-size: 11px;
  line-height: 1.2;
}

/* 備考も同様に */
.paper-grid .cell.value.remarks{
  font-size: 11px;
  line-height: 1.2;
}

/* 余白を少し詰める（セルのpadding定義がある場合は上書き） */
.paper-grid .cell{
  padding: 6px 8px !important;
}

/* ===== shrink the big empty band (red area) ===== */
/* .paper-grid が grid を使っている前提。行が固定されている場合に上書きする。 */
.paper-grid{
  /* 既存が 3行固定などなら、auto ベースに置き換えて余白行を作らない */
  grid-auto-rows: auto;
}

/* もし grid-template-rows を固定pxで定義しているなら、それを上書き */
@supports (grid-template-rows: auto) {
  .paper-grid{
    /* 上から: ヘッダ行 / 2行目 / 3行目(行先+本文+備考) / 経路行 */
    /* “本文の行”は minmax で必要最小に */
    grid-template-rows:
      auto
      auto
      minmax(90px, auto)
      auto !important;
  }
}

/* 本文セルにだけ最低限の高さを付与（赤枠の“空行”を作らない） */
.paper-grid .cell.value.big{
  min-height: 90px; /* ここを小さくすると赤枠が縮む。例: 90〜120pxで調整 */
}
.paper-grid .cell.value.remarks{
  min-height: 90px;
}

/* もし「空白行」用のセル/行が HTML にある場合の保険
   （例: class="spacerRow" を付けているなら印刷時に消す）
*/
@media print{
  .paper-grid .spacerRow{ display:none !important; }
}

/* ===== print: さらに詰めて必ず1枚に収める ===== */
@media print{
  .paper{
    font-size: 11px;
    line-height: 1.2;
  }
  .paper-grid .cell.label{ font-size: 10px; }
  .paper-grid .cell.value{ font-size: 11px; }
  .paper-grid .cell.value.big,
  .paper-grid .cell.value.remarks{
    font-size: 10px;
    line-height: 1.15;
  }
}

/* ===== last resort: 端末が狭い時だけ縮小（プレビュー崩れの保険） ===== */
@media screen and (max-width: 420px){
  .paper{
    transform: scale(0.92);
    transform-origin: top left;
  }
}
/* 大きい記入欄（主な援助内容 / 備考） */
.paper-grid .cell.value.big{
  min-height:320px;
  font-weight:600;
  white-space:pre-wrap;
}
.paper-grid .cell.value.remarks{
  min-height:320px;
  white-space:pre-wrap;
}

