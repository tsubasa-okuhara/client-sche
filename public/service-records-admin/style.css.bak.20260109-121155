/* =========================
   印刷: A4 に 2件/ページ（上下）
   ========================= */
@page {
  size: A4;
  margin: 6mm;
}

@media print {
  :root{
    --paper-label-w: 58px; /* 印刷時はさらに細く */
  }
  /* 画面UIは印刷しない */
  .no-print,
  header,
  .topbar,
  #panel .card,
  #groups,
  #meta,
  .controls {
    display: none !important;
  }

  /* 印刷対象だけ表示 */
  #printArea {
    display: block !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  /* 1ページに2つ縦並び（A4高さ297mm → margin合計12mm → 有効約285mm → 半分142.5mm） */
  #printArea .paper,
  #printArea .paper.paper--half {
    height: 142.5mm;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden; /* 下切れ防止のため、はみ出しは抑制 */
    page-break-inside: avoid;
    break-inside: avoid;
    margin: 0 0 4mm 0 !important;
    padding: 0 !important;
    transform-origin: top left;

    /* 印刷で色が薄くなる対策（必要なら） */
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  /* 2件ごとに改ページ（JS から class 付与する場合はこちらを利用） */
  .page-break-after {
    page-break-after: always;
    break-after: page;
  }
  /* nth-child でも2件ごと改ページ */
  #printArea .paper:nth-child(2n) {
    break-after: page;
    page-break-after: always;
  }
  /* 最後は改ページしない */
  #printArea .paper:last-child {
    break-after: auto;
    page-break-after: auto;
  }

  /* 帳票内の文字が溢れる対策（小さくして収める） */
  .paper .paper-grid,
  .paper .cell {
    font-size: 10.5pt !important;
    line-height: 1.25 !important;
  }
  .paper .cell.value.big {
    font-size: 10pt !important;
    line-height: 1.22 !important;
    word-break: break-word;
    overflow-wrap: anywhere;
  }
  .paper .cell.value.remarks {
    font-size: 10pt !important;
    line-height: 1.22 !important;
    word-break: break-word;
    overflow-wrap: anywhere;
  }
  .paper .paper-title {
    font-size: 16pt !important;
    margin: 0 0 4mm 0 !important;
  }
  .paper .pill {
    font-size: 10pt !important;
    padding: 2mm 6mm !important;
  }
}
/* ===== paper: shrink main block height to "content-fit" ===== */
@media print {
  /* 1) 本文ブロック行を「必要最小 + 伸びる」にする */
  .paper-grid{
    /* 既存が固定pxなら上書き */
    grid-template-rows:
      auto                /* 1行目: 事業所名/確認欄/ヘルパー */
      auto                /* 2行目: 利用者/日付/時間 */
      minmax(90px, auto) /* 3行目: 行先 + 主な援助内容 + 備考 ← ここを短く */
      auto !important;    /* 4行目: 経路 */
  }

  /* 2) セル側の最低高さも短く（内容が少なければ縮む） */
  .paper-grid .cell.value.big,
  .paper-grid .cell.value.remarks{
    min-height: 90px;  /* ここを 90〜140px で調整 */
  }

  /* 3) 文字が多いときに溢れないように（縮める方向に寄せる） */
  .paper-grid .cell.value.big,
  .paper-grid .cell.value.remarks{
    font-size: 10px;      /* はみ出すなら 10px に */
    line-height: 1.25;
    overflow: hidden;     /* “ページ跨ぎ”で切れるよりは、まず溢れ防止 */
    word-break: break-word;
  }
}

/* ===== print: 2枚/ページ用のラッパー運用 ===== */
@media print {
  /* A4 / 2枚を1ページに収める */
  @page {
    size: A4 portrait;
    margin: 8mm;
  }

  /* 画面用UIは印刷しない */
  .no-print { display: none !important; }

  /* 印刷エリアを「縦に2段」レイアウトにする */
  #printArea {
    display: flex !important;
    flex-direction: column !important;
    gap: 0 !important;
  }

  /*
    重要:
    transform: scale() は「見た目だけ縮む」ので、レイアウト崩れを防ぐために
    “枠(高さを確保する) + 中身(縮小表示)” の2段構造にする。
  */
  .paperWrap {
    height: 140mm;           /* 8mmマージン想定で「2枚/ページ」に収める高さ */
    overflow: hidden;
    page-break-inside: avoid;
    break-inside: avoid;
  }

  .paperWrap + .paperWrap {
    margin-top: 0;
  }

  .paperWrap .paper {
    /* 画面の“元の大きさ”を基準に、印刷時だけ縮小 */
    transform: scale(0.55);
    transform-origin: top left;
    width: 210mm;           /* 元サイズ基準（A4幅） */
  }

  /* 3枚目からは次ページへ（2枚単位で改ページ） */
  .paperWrap:nth-child(2n) {
    page-break-after: always;
    break-after: page;
  }

  /* 最後は強制改ページしない */
  .paperWrap:last-child {
    page-break-after: auto;
    break-after: auto;
  }
}

