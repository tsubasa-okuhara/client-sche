:root {
  --build-id: "admin-css-20260109-0220";
}

/* 画面でも「印刷用レイアウト」を疑似表示したい時のトグル */
body.is-print-preview #printArea {
  /* 2枚/1ページの見え方を画面でも確認できる */
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8mm;
}
body.is-print-preview .paper {
  transform: scale(0.48);
  transform-origin: top left;
  margin: 0;
}

/* build-id を画面に出す（邪魔なら後で消す） */
#buildMarker {
  position: fixed;
  right: 10px;
  bottom: 10px;
  z-index: 9999;
  font-size: 12px;
  padding: 6px 10px;
  border-radius: 999px;
  background: rgba(0,0,0,0.72);
  color: #fff;
}
/* =========================
 * 印刷時：A4いっぱいに拡張（上寄せ・余白ほぼゼロ）
 * 目的：プレビューで小さく見えても、印刷/PDFではA4全面に近づける
 * ========================= */
@page {
  size: A4;
  margin: 6mm; /* ここを 0mm にすると“ほぼ全面”になります（プリンタによっては不可） */
}

@media print {
  html, body {
    width: 210mm;
    height: 297mm;
    margin: 0 !important;
    padding: 0 !important;
    background: #fff !important;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  /* 画面用UIは非表示（必要なら既存 no-print を利用） */
  .no-print { display: none !important; }

  /* 印刷エリアは上寄せで詰める */
  #printArea {
    margin: 0 !important;
    padding: 0 !important;
  }

  /* 1枚のA4に対して “枠（paper）” を最大化する */
  .paper {
    /* 既存の影などをOFF */
    box-shadow: none !important;
    background: #fff !important;

    /* A4の印刷可能領域に合わせる（@page margin 分を引く） */
    width: calc(210mm - 12mm) !important;   /* 210mm - (6mm*2) */
    height: calc(297mm - 12mm) !important;  /* 297mm - (6mm*2) */
    margin: 0 !important;
    padding: 0 !important;

    /* 上寄せ */
    break-inside: avoid;
    page-break-inside: avoid;
  }

  /* もし“縮小表示”用に transform: scale(...) を当てている場合は印刷時に解除 */
  .paper,
  .paperWrap,
  #paper,
  #paper * {
    transform: none !important;
  }
}
