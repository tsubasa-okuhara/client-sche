{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/takizawa_schedule/**",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      },
      {
        "source": "/helpers/**",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      },
      {
        "source": "/service-records/**",
        "headers": [{ "key": "Cache-Control", "value": "no-store" }]
      },
      {
        "source": "/**/*.js",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      },
      {
        "source": "/**/*.css",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      }
    ],
    "rewrites": [
      {
        "source": "/takizawa_schedule/**",
        "destination": "/takizawa_schedule/index.html"
      },
      { "source": "/helpers/**", "destination": "/helpers/index.html" },
      {
        "source": "/service-records/**",
        "destination": "/service-records/index.html"
      },
      { "source": "/tamari/**", "destination": "/tamari/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
